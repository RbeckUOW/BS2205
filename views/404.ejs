<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <div class="page-wrap">
      <header class="page-header"><%- include('partials/header'); %></header>
      <nav class="page-nav">
        <details id="nav-details">
          <summary>Menu</summary>
          <ul>
            <% for (let i = 0; i < nav.length; i++) { %>
            <li><a href="<%= nav[i].link %>"><%= nav[i].title %></a></li>
            <% } %>
          </ul>
        </details>
      </nav>
      <main class="page-main">
        <article>
          <summary><h2>You're not supposed to be here!</h2></summary>
          <div class="body-oops-404">
            <img src="/images/404.jpg" alt="404 Error" />
          </div>
          <button
            type="button"
            onclick="window.history.back()"
            class="body-oops-button"
          >
            <h3>Get me out of here</h3>
          </button>
        </article>
      </main>
      <footer class="page-footer"><%- include('partials/footer'); %></footer>
    </div>

    <script src="/js/menu.js"></script>
    <script src="/js/toggle-theme.js"></script>
    <script src="/js/fetchEquipment.js"></script>
    <script src="/js/fetchReservations.js"></script>
    <script src="/js/sw.js"></script>
  </body>
</html>
